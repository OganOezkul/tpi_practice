<Window x:Class="tpiPracticeGUI.Windows.groupchatNameEditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tpiPracticeGUI.Windows"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="changer le nom du groupe chat" Height="148" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="246*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Changer le nom du groupe chat" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <TextBox TextChanged="groupchatNameTextbox_TextChanged" Grid.Row="1" x:Name="groupchatNameTextbox" Margin="0,0,0,10" />
            <Button Grid.Row="2" Content="Ok" x:Name="submissionButton" Margin="0,0,0,10" Click="submissionButton_Click" />
        </Grid>
    </Grid>
</Window>
