<UserControl x:Class="tpiPracticeGUI.Controls.messageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tpiPracticeGUI.Controls"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             Background="LightGray"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="555*"/>
                <ColumnDefinition Width="107*"/>
                <ColumnDefinition Width="138*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="usernameLabel" Content="User" VerticalContentAlignment="Center" FontSize="30" Margin="20,0,0,0" />
            <Image x:Name="editionButton" Source="/Assets/Icons/edit.png" Grid.Column="1" MouseUp="editionButton_MouseUp" />
            <Image x:Name="removeButton" Source="/Assets/Icons/delete.png" Grid.Column="2" MouseUp="removeButton_MouseUp" />
        </Grid>
