<UserControl x:Class="tpiPracticeGUI.Controls.groupchatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tpiPracticeGUI.Controls"
             mc:Ignorable="d" 
             Background="LightGray"
             Loaded="UserControl_Loaded"
             MouseUp="UserControl_MouseUp"
             d:DesignHeight="116.485" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/Assets/Icons/edit.png" Grid.Row="1" Grid.Column="1" x:Name="editionImage" MouseEnter="groupChatEditionIcons_MouseEnter" MouseLeave="groupChatEditionIcons_MouseLeave" MouseUp="editionImage_MouseUp" PreviewMouseUp="editionImage_PreviewMouseUp" Visibility="Collapsed" />
            <Image Source="/Assets/Icons/delete.png" Grid.Row="1" Grid.Column="2" x:Name="removeImage" MouseEnter="groupChatEditionIcons_MouseEnter" MouseLeave="groupChatEditionIcons_MouseLeave" MouseUp="removeImage_MouseUp" PreviewMouseUp="removeImage_PreviewMouseUp" Visibility="Collapsed" />
        </Grid>
        <Label Content="Lorem Ipsum" VerticalContentAlignment="Center" FontSize="40" Margin="20,0,0,0" x:Name="nameLabel" />
    </Grid>
</UserControl>
